// docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Season {
  id                Int      @id @default(autoincrement())
  startYear         Int      @map("start_year")
  endYear           Int      @map("end_year")
  status            String    @default("inactive")
  membershipAmount  Decimal  @map("membership_amount") @db.Decimal(10, 2)
  discountPercent   Int      @default(10) @map("discount_percent") 
  totalDonations    Decimal @default(0) @map("total_donations") @db.Decimal(10, 2)
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @default(now()) @updatedAt @map("updated_at")        

  workshopPrices    WorkshopPrice[]
  memberships       Membership[]
  registrations     Registration[]
  payments          Payment[]
  invoice           Invoice[]

  @@unique([startYear, endYear])
  @@map("seasons")
}

model WorkshopPrice {
  id          Int      @id @default(autoincrement())
  workshopId  Int      @map("workshop_id")
  seasonId    Int      @map("season_id")
  amount      Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")

  workshop    Workshop @relation(fields: [workshopId], references: [id], onDelete: Cascade)
  season      Season   @relation(fields: [seasonId], references: [id], onDelete: Cascade)

  @@unique([workshopId, seasonId])
  @@map("workshop_prices")
}

model Workshop {
  id                      Int      @id @default(autoincrement())
  name                    String   @db.VarChar(100)
  description             String?  @db.Text
  status                  String   @default("active")
  allowMultiple           Boolean  @default(false) @map("allow_multiple")
  maxPerMember            Int?     @map("max_per_member")
  createdAt               DateTime @default(now()) @map("created_at")
  updatedAt               DateTime @default(now()) @updatedAt @map("updated_at")

  workshopPrices          WorkshopPrice[]
  registrations           Registration[]

  @@unique([name])
  @@map("workshops")
}

model Family {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(100)
  address     String?  @db.Text
  phone       String?  @db.VarChar(20)
  email       String?  @db.VarChar(255)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")

  members     Member[]
  payments    Payment[]
  invoices    Invoice[]

  @@map("families")
}

model Member {
  id                  Int      @id @default(autoincrement())
  familyId            Int?     @map("family_id")
  lastName            String   @map("last_name") @db.VarChar(100)
  firstName           String   @map("first_name") @db.VarChar(100)
  isMinor             Boolean  @default(false) @map("is_minor")
  email               String?  @db.VarChar(255)
  phone               String?  @db.VarChar(20)
  guardianLastName    String?  @map("guardian_last_name") @db.VarChar(100)
  guardianFirstName   String?  @map("guardian_first_name") @db.VarChar(100)
  guardianPhone       String?  @map("guardian_phone") @db.VarChar(20)
  guardianEmail       String?  @map("guardian_email") @db.VarChar(255)
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @default(now()) @updatedAt @map("updated_at")

  family              Family?         @relation(fields: [familyId], references: [id], onDelete: SetNull)
  memberships         Membership[]
  registrations       Registration[]

  @@index([familyId])
  @@index([lastName, firstName])
  @@map("members")
}

model Membership {
  id              Int      @id @default(autoincrement())
  memberId        Int      @map("member_id")
  seasonId        Int      @map("season_id")
  familyOrder     Int      @default(1) @map("family_order")
  amount          Decimal  @db.Decimal(10, 2)
  status          String   @default("pending") @db.VarChar(20)
  membershipDate  DateTime @default(now()) @map("membership_date") @db.Date
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @default(now()) @updatedAt @map("updated_at")

  member          Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  season          Season   @relation(fields: [seasonId], references: [id], onDelete: Cascade)

  @@unique([memberId, seasonId])
  @@index([memberId])
  @@index([seasonId])
  @@map("memberships")
}

model Registration {
  id                Int      @id @default(autoincrement())
  memberId          Int      @map("member_id")
  seasonId          Int      @map("season_id")
  workshopId        Int      @map("workshop_id")
  quantity          Int      @default(1)
  totalPrice        Decimal  @map("total_price") @db.Decimal(10, 2)
  discountPercent   Decimal  @default(0) @map("discount_percent") @db.Decimal(5, 2)
  registrationDate  DateTime @default(now()) @map("registration_date") @db.Date
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @default(now()) @updatedAt @map("updated_at")

  member            Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  season            Season   @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  workshop          Workshop @relation(fields: [workshopId], references: [id], onDelete: Cascade)

  @@unique([memberId, seasonId, workshopId])
  @@index([memberId])
  @@index([seasonId])
  @@index([workshopId])
  @@map("registrations")
}

model Payment {
  id            Int       @id @default(autoincrement())
  familyId      Int       @map("family_id")
  seasonId      Int       @map("season_id")
  amount        Decimal   @db.Decimal(10, 2)
  paymentType   String    @map("payment_type") @db.VarChar(20)  // cash, check, transfer, card
  paymentDate   DateTime  @map("payment_date") @db.Date
  cashingDate   DateTime? @map("cashing_date") @db.Date
  status        String    @default("pending") @db.VarChar(20)  // pending, completed, cancelled
  reference     String?   @db.VarChar(50)
  notes         String?   @db.Text
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @default(now()) @updatedAt @map("updated_at")

  family        Family    @relation(fields: [familyId], references: [id], onDelete: Cascade)
  season        Season    @relation(fields: [seasonId], references: [id], onDelete: Cascade)

  @@index([familyId])
  @@index([seasonId])
  @@index([status])
  @@map("payments")
}

model Invoice {
  id            Int     @id @default(autoincrement())
  familyId      Int     @map("family_id")
  seasonId      Int     @map("season_id")
  status        String  @db.VarChar(50)
  invoiceNumber String? @map("invoice_number") @unique @db.VarChar(50)
  issuedAt      DateTime? @default(now()) @map("issued_at")
  totalAmount   Decimal @db.Decimal(10, 2) @map("total_amount")

  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @default(now()) @updatedAt @map("updated_at")

  items         InvoiceItem[]
  family        Family    @relation(fields: [familyId], references: [id], onDelete: Cascade)
  season        Season    @relation(fields: [seasonId], references: [id], onDelete: Cascade)

  @@unique([familyId, seasonId])
}


model InvoiceItem {
  id            Int @id @default(autoincrement())
  invoiceId     Int @map("invoice_id")
  label         String @db.VarChar(255)
  description   String? @db.Text
  unitPrice     Decimal @db.Decimal(10, 2) @map("unit_price")
  quantity      Int
  lineTotal     Decimal @db.Decimal(10, 2) @map("line_total")

  invoice     Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}






// ============================================
// AUTHENTICATION MODELS
// ============================================

enum UserRole {
  ADMIN      // Administrateur complet
  MANAGER    // Gestionnaire (CRUD sur tout sauf users)
  VIEWER     // Lecture seule
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  password      String    // Hash bcrypt
  image         String?
  role          UserRole  @default(VIEWER)
  isActive      Boolean   @default(true) @map("is_active")
  
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @default(now()) @updatedAt @map("updated_at")
  
  // Relations NextAuth
  accounts      Account[]
  sessions      Session[]
  
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}